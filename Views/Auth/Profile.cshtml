@model Products.Models.Auth.UserProfileDto

@{
    ViewData["Title"] = "Mening profilim";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-user-circle"></i> Mening profilim
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="profile-avatar">
                                <i class="fas fa-user-circle fa-7x text-primary"></i>
                            </div>
                            <h4 class="mt-3">@Model.FirstName @Model.LastName</h4>
                            <p class="text-muted">@Model.Email</p>
                        </div>

                        <div class="col-md-8">
                            <h5 class="mb-3">
                                <i class="fas fa-info-circle text-primary"></i>
                                Shaxsiy ma'lumotlar
                            </h5>

                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">
                                    <code>#@Model.Id</code>
                                </dd>

                                <dt class="col-sm-4">To'liq ism:</dt>
                                <dd class="col-sm-8">
                                    <strong>@Model.FirstName @Model.LastName</strong>
                                </dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-envelope text-muted me-1"></i>
                                    @Model.Email
                                </dd>

                                <dt class="col-sm-4">Telefon:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <i class="fas fa-phone text-muted me-1"></i>
                                        @Model.PhoneNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Kiritilmagan</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Ro'yxatdan o'tgan:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-calendar-plus text-success me-1"></i>
                                    @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </dd>

                                <dt class="col-sm-4">Oxirgi kirgan:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.LastLoginAt.HasValue)
                                    {
                                        <i class="fas fa-clock text-info me-1"></i>
                                        @Model.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Ma'lumot yo'q</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="mb-3">
                                <i class="fas fa-cogs text-primary"></i>
                                Hisob sozlamalari
                            </h5>

                            <div class="d-flex flex-wrap gap-2">
                                <a asp-action="ChangePassword" class="btn btn-warning">
                                    <i class="fas fa-key"></i> Parolni o'zgartirish
                                </a>

                                <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                                    <i class="fas fa-edit"></i> Profilni tahrirlash
                                </button>

                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Orqaga
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProfileModalLabel">
                    <i class="fas fa-edit"></i> Profilni tahrirlash
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Diqqat:</strong> Profil ma'lumotlarini tahrirlash funksiyasi keyinroq qo'shiladi.
                </div>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Ism</label>
                        <input type="text" class="form-control" value="@Model.FirstName" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Familiya</label>
                        <input type="text" class="form-control" value="@Model.LastName" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="@Model.Email" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Telefon</label>
                        <input type="tel" class="form-control" value="@Model.PhoneNumber" disabled>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Yopish</button>
                <button type="button" class="btn btn-primary" disabled>
                    <i class="fas fa-save"></i> Saqlash
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}